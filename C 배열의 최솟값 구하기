#include <stdio.h>

//요소의 값을 교환하는 방식으로 배열의 최솟값을 구하시오.

int main()
{
	int array[5] = { 30,40,10,50,20 };
	int i = 0;
	int storage = 0;
	/*
	1. 요소의 값을 교환하는 방식으로 배열의 최솟값을 구하시오
	2. 수가 작은 순서대로 정렬하시오.
	3. 배열을 입력 받아서 수가 작은 순서대로 정렬하시오.
	*/
	for (i = 0; i < 4; i++)
	{
		if (array[0] > array[i + 1])
		{
			storage = array[0];
			array[0] = array[i + 1];
			array[i + 1] = storage;
		}
	}
	printf("배열의 최솟값은 %d 입니다.\n", array[0]);

	return 0;
}
